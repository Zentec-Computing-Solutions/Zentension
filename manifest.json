{
    "name": "Zenstension",
    "description": "An extension for RepairShopr that adds lots of shortcuts and features.",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html",
        "default_icon": "assets/logo.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://zentec.repairshopr.com/tickets/*",
                "https://zentec.repairshopr.com/customers/*"
            ],
            "js": [
                "scripts/copy_buttons.js",
                "scripts/print_label_button.js",
                "vendor/bootstrap.js"
            ]
        },
        {
            "matches": [
                "https://zentec.repairshopr.com/registers/*/close",
                "https://zentec.repairshopr.com/registers/*/open"
            ],
            "js": ["scripts/close_register_script.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["scripts/show_pdf.js"],
            "matches": ["https://zentec.repairshopr.com/*"]
        },
        {
            "resources": ["scripts/price_calculator.js"],
            "matches": ["<all_urls>"]
        }
    ]
}
